{
  "name": "wevis-intellisense",
  "displayName": "WeVis IntelliSense",
  "description": "VSCode IntelliSense for WeVis Design System",
  "version": "1.0.0",
  "publisher": "rootenginear",
  "repository": {
    "type": "git",
    "url": "https://github.com/rootEnginear/wevis-intellisense"
  },
  "license": "MIT",
  "homepage": "https://github.com/rootEnginear/wevis-intellisense/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/rootEnginear/wevis-intellisense/issues"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "keywords": [
    "css",
    "class",
    "autocomplete",
    "wevis"
  ],
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "wevis-intellisense.toggleIntelliSense",
        "title": "WeVis IntelliSense: Toggle IntelliSense"
      },
      {
        "command": "wevis-intellisense.openSettings",
        "title": "WeVis IntelliSense: Open Settings"
      }
    ],
    "configuration": [
      {
        "title": "WeVis IntelliSense",
        "properties": {
          "wevisIntellisense.enableIntellisense": {
            "description": "Enable IntelliSense in available file.",
            "type": "boolean",
            "default": true
          },
          "wevisIntellisense.allowEmmet": {
            "description": "Allow suggestion with Emmet abbreviation.",
            "type": "boolean",
            "default": true
          },
          "wevisIntellisense.htmlLanguages": {
            "description": "A list of HTML based languages where suggestions are enabled.",
            "type": "array",
            "default": [
              "html",
              "vue",
              "vue-html",
              "svelte",
              "astro"
            ]
          },
          "wevisIntellisense.javascriptLanguages": {
            "description": "A list of JavaScript based languages where suggestions are enabled.",
            "type": "array",
            "default": [
              "javascript",
              "javascriptreact",
              "typescriptreact"
            ]
          }
        }
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "typescript": "^4.8.4"
  }
}
